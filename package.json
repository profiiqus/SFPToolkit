{
    "name": "sfpconfigurator",
    "displayName": "SmartFP Configurator",
    "description": "Collection of useful tools, created to accelerate the configuration of SmartFP",
    "publisher": "PavelFesenko",
    "version": "1.1.0",
    "icon": "logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ProfiiQus/SmartFP-Configurator"
    },
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:xml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "xml",
                "extensions": [
                    ".xml"
                ],
                "aliases": [
                    "XML"
                ]
            }
        ],
        "snippets": [
            {
                "language": "xml",
                "path": "./snippets/columns.json"
            },
            {
                "language": "xml",
                "path": "./snippets/controls.json"
            },
            {
                "language": "xml",
                "path": "./snippets/data.json"
            },
            {
                "language": "xml",
                "path": "./snippets/dependencies.json"
            },
            {
                "language": "xml",
                "path": "./snippets/documents.json"
            },
            {
                "language": "html",
                "path": "./snippets/html.json"
            },
            {
                "language": "xml",
                "path": "./snippets/others.json"
            },
            {
                "language": "xml",
                "path": "./snippets/parameters.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "typescript": "^4.0.0",
        "vscode": "^1.1.37"
    }
}